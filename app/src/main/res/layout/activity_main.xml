<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"

    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:text="RanDom"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:typeface="monospace"
        android:textStyle="bold"
       android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
         />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:gravity="center"
     android:typeface="serif"
    android:textStyle="italic"
    android:text="NB : click on the 'index' button below to ensure the well understanding of the game"
    android:textSize="20dp"

    android:textColor="#FFFFFF"
    />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="70dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_b"
        android:textStyle="italic"
        android:typeface="serif"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        style="@style/main_buttons"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="index"
        android:textSize="20dp"
        android:id="@+id/rules_b"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:typeface="serif"
        android:layout_gravity="center_horizontal"
        style="@style/main_buttons"
        />
</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:text="Developped by Bellabaci NaZim  "
        android:textColor="#FFFFFF"
        android:typeface="serif"
        android:textStyle="italic"
        android:layout_gravity="bottom|right"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/rate"
        android:background="@drawable/rateus"
        android:layout_gravity="right"
         />
    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2561306222851578/4260129245" />

</LinearLayout>
